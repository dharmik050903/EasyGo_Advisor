# Backend Environment Variables
# Copy this file to .env in the server directory

# MongoDB Connection String
MONGO_URI=mongodb://localhost:27017/easygo

# Email Configuration (Gmail)
EMAIL_USER=your_gmail_address@gmail.com
EMAIL_PASS=your_gmail_app_password

# Admin Email for notifications
ADMIN_EMAIL=admin_email@example.com

# Server Port
PORT=5000

# Encryption Secret Key (must match frontend REACT_APP_SECRET_KEY)
# In production, use a strong randomly generated key
SECRET_KEY=EasyGoAdvisor@1974
